{
	"name": "gulp-template",
	"version": "1.1.2",
	"description": "gulp + webpack template for web dev",
	"main": "index.js",
	"scripts": {
		"build": "gulp runBuild",
		"start": "gulp runDev",
		"test-js": "eslint src/**/*.js",
		"test-editorconfig": "editorconfig-checker",
		"test-styles": "stylelint \"./src/styles/**/*.scss\" --custom-syntax postcss-scss",
		"test-styles--fix": "stylelint \"./src/styles/**/*.scss\" --custom-syntax postcss-scss --fix",
		"test-markup": "html-validator --quiet \"./src/**/*.html\" && gulp lintBemMarkup",
		"tests": "npm run test-js && npm run test-editorconfig && npm run test-styles && npm run test-markup"
	},
	"engines": {
		"node": ">=18"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AntonOshurek/Gulp-template.git"
	},
	"keywords": [
		"gulp",
		"gulp-template",
		"web development",
		"web project",
		"build automation",
		"task runner",
		"development workflow",
		"frontend development",
		"webpack",
		"Gulp.js",
		"build process",
		"optimization",
		"sass",
		"scss"
	],
	"author": "Anton Oshurek",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/AntonOshurek/Gulp-template/issues"
	},
	"homepage": "https://github.com/AntonOshurek/Gulp-template#readme",
	"devDependencies": {
		"@babel/core": "^7.24.4",
		"@babel/preset-env": "^7.24.4",
		"autoprefixer": "^10.4.19",
		"babel-loader": "^9.1.3",
		"browser-sync": "^3.0.2",
		"core-js": "^3.37.1",
		"cssnano": "^7.0.2",
		"csso": "^5.0.5",
		"del": "^7.1.0",
		"editorconfig-checker": "^5.1.5",
		"eslint": "^8.50.0",
		"eslint-config-eslint": "^9.0.0",
		"gulp": "^5.0.0",
		"gulp-file-include": "^2.3.0",
		"gulp-html-bemlinter": "^4.0.0",
		"gulp-htmlmin": "^5.0.1",
		"gulp-if": "^3.0.0",
		"gulp-imagemin": "^9.1.0",
		"gulp-newer": "^1.4.0",
		"gulp-notify": "^4.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^10.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^5.1.0",
		"gulp-sitemap": "^8.0.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-typograf": "^4.1.0",
		"gulp-webp": "^5.0.0",
		"postcss-scss": "^4.0.9",
		"sass": "^1.77.4",
		"stylelint": "^16.3.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-order": "^6.0.4",
		"webpack": "^5.91.0",
		"webpack-stream": "^7.0.0"
	}
}
